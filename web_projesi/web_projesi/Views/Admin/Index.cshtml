@model IEnumerable<web_projesi.Models.Model.Admin>
@{
    ViewBag.Title = "Admin Anasayfa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<!--overview start-->

<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <div class="info-box blue-bg">
            <i class="fa fa-cloud-download"></i>
            <div class="count">@ViewBag.BlogSay</div>
            <div class="title"><a href="/Blog/Index/">Blog Yazısı</a></div>
        </div>
        <!--/.info-box-->
    </div>
    <!--/.col-->

    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <div class="info-box brown-bg">
            <i class="fa fa-shopping-cart"></i>
            <div class="count">@ViewBag.KategoriSay</div>
            <div class="title"><a href="/Kategori/Index/">Kategoriler</a></div>
        </div>
        <!--/.info-box-->
    </div>
    <!--/.col-->

    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <div class="info-box dark-bg">
            <i class="fa fa-thumbs-o-up"></i>
            <div class="count">@ViewBag.HizmetSay</div>
            <div class="title"><a href="/Hizmet/Index/">Hizmetler</a></div>
        </div>
        <!--/.info-box-->
    </div>
    <!--/.col-->

    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <div class="info-box green-bg">
            <i class="fa fa-cubes"></i>
            <div class="count">@ViewBag.SiteAciklamaSay</div>
            <div class="title"><a href="/Kimlik/Index/">Site Açıklamaları</a></div>
        </div>
        <!--/.info-box-->
    </div>
    <!--/.col-->

</div>
<!--/.row-->


