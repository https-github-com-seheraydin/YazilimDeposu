@model IEnumerable<web_projesi.Models.Model.Hizmet>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<meta charset="utf-8">
<meta content="width=device-width, initial-scale=1.0" name="viewport">

<title>CSS - Icons</title>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />

<h2>Hizmetler</h2>
<a class="btn btn-info" href="/Hizmet/Create/">Yeni Ekle</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>

            <th>Başlık</th>
            <th>Açıklamalar</th>
            <th>Resim URL</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Baslik</td>
                <td>@Html.Raw(item.Aciklama)</td>
                <td><img width="100" height="100" src="@item.ResimURL" /></td>
                <td><a href="/Hizmet/Edit/@item.HizmetId">Güncelle</a> | <a href="/Hizmet/Delete/@item.HizmetId">Sil</a></td>
            </tr>
        }


    </tbody>
</table>

